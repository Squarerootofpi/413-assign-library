@{
}

@model Book
<tr>
    <td class="card-title">@Model.Title</td>
    <td>@Model.AuthorLastName</td>
    <td>@Model.AuthorFirstNames</td>
    <td>@Model.Publisher</td>
    <td>$@Model.Price</td>
    <td>@Model.TotalPages</td>
    <td>@Model.Classification</td>
    <td>@Model.Category</td>
    <td class="text-muted">@Model.ISBN</td>
    <td>
        <form id="@Model.BookId" asp-page="/AddToCart" method="post">
            <input type="hidden" asp-for="BookId"/>
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                <button type="submit" class="btn-success btn-sm text-nowrap pull-right float-right">
                    Add to cart
                </button>
            </span>
        </form>
    </td>

</tr>